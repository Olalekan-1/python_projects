
<Menu>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, .8
        Rectangle:
            size: self.size
    Label:
        font_size: dp(65)
        font_name: "fonts/Sackers-Gothic-Std-Light.ttf"
        text: root.parent.menuText
        pos_hint: {"center_x": .5, "center_y": .6}
    Button:
        font_size: dp(30)
        font_name: "fonts/Eurostile.ttf"
        text: root.parent.buttonText
        pos_hint: {"center_x": .5, "center_y": .3}
        size_hint: .2, .16
        on_press: root.parent.on_menu_button_pressed()
        background_normal: ""
        background_color: 1, .34, .45, .87